@model HotelBooking.ViewModels.HotelFormViewModel
@{
    ViewData["Title"] = $"Edit {Model.Name}";
}

<div class="max-w-3xl mx-auto py-8 px-4">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6">
        <ol class="flex items-center gap-2 text-gray-500">
            <li><a asp-action="Dashboard" class="hover:text-primary">Dashboard</a></li>
            <li>/</li>
            <li class="text-gray-900 font-medium">Edit Hotel</li>
        </ol>
    </nav>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-teal-500 to-cyan-600 px-8 py-8 text-white">
            <div class="flex items-center gap-4">
                <div class="text-5xl">üè®</div>
                <div>
                    <h1 class="text-2xl font-bold">Edit Hotel Details</h1>
                    <p class="text-white/80 mt-1">Update information for @Model.Name</p>
                </div>
            </div>
        </div>

        <!-- Form -->
        <form asp-action="EditHotel" method="post" class="p-8">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="HotelId" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error rounded-xl mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>@Html.ValidationSummary()</span>
                </div>
            }

            <!-- Basic Information -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    Basic Information
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Hotel Name *</label>
                        <input asp-for="Name" class="input input-bordered w-full bg-white text-gray-900 focus:border-primary" required />
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                        <textarea asp-for="Description" rows="3" class="textarea textarea-bordered w-full bg-white text-gray-900 focus:border-primary" placeholder="Describe your hotel's unique features and amenities..."></textarea>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Star Rating</label>
                        <select asp-for="StarRating" class="select select-bordered w-full bg-white text-gray-900">
                            @for (decimal i = 1; i <= 5; i += 0.5m)
                            {
                                <option value="@i" selected="@(Model.StarRating == i)">@i ‚≠ê</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                        <input asp-for="Phone" type="tel" class="input input-bordered w-full bg-white text-gray-900" placeholder="+84 xxx xxx xxx" />
                    </div>
                </div>
            </div>

            <!-- Location -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    </svg>
                    Location
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                        <input asp-for="Address" class="input input-bordered w-full bg-white text-gray-900" placeholder="123 Main Street" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">City</label>
                        <input asp-for="City" class="input input-bordered w-full bg-white text-gray-900" placeholder="Ho Chi Minh City" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Country</label>
                        <input asp-for="Country" class="input input-bordered w-full bg-white text-gray-900" placeholder="Vietnam" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Latitude</label>
                        <input asp-for="Latitude" type="number" step="any" class="input input-bordered w-full bg-white text-gray-900" placeholder="10.762622" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Longitude</label>
                        <input asp-for="Longitude" type="number" step="any" class="input input-bordered w-full bg-white text-gray-900" placeholder="106.660172" />
                    </div>
                </div>
            </div>

            <!-- Media & Links -->
            <div class="mb-8">
                <h2 class="text-lg font-semibold text-gray-900 mb-4 flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Media & Links
                </h2>
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
                        <input asp-for="ImageUrl" type="url" class="input input-bordered w-full bg-white text-gray-900" placeholder="https://example.com/hotel-image.jpg" />
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mt-3">
                                <img src="@Model.ImageUrl" alt="Hotel image" class="w-40 h-24 object-cover rounded-lg border border-gray-200" />
                            </div>
                        }
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Website</label>
                        <input asp-for="Website" type="url" class="input input-bordered w-full bg-white text-gray-900" placeholder="https://www.yourhotel.com" />
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="flex gap-3 pt-6 border-t border-gray-100">
                <button type="submit" class="btn btn-primary flex-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Save Changes
                </button>
                <a asp-action="Dashboard" class="btn btn-ghost">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
