@model HotelBooking.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Owner Dashboard";
}

<div class="max-w-7xl mx-auto py-8 px-4">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Dashboard</h1>
            <p class="text-sm text-gray-500 mt-1">Overview of your hotel performance.</p>
        </div>
        <div class="flex items-center gap-2 bg-white rounded-lg border p-1 shadow-sm">
            <span class="px-3 py-1 text-xs font-medium rounded-md bg-gray-100 text-gray-900">Today</span>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Revenue Card -->
        <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Total Revenue</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-2">@Model.TotalRevenue.ToString("N0")₫</h3>
                </div>
                <div class="p-2 bg-green-50 rounded-lg">
                    <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                 <span class="text-gray-500">From @Model.TotalBookings bookings</span>
            </div>
        </div>

        <!-- Occupancy Card -->
         <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Occupancy Rate</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-2">@Model.OccupancyRate.ToString("F1")%</h3>
                </div>
                <div class="p-2 bg-blue-50 rounded-lg">
                    <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                 <div class="w-full bg-gray-100 rounded-full h-2">
                    <div class="bg-blue-600 h-2 rounded-full" style="width: @Model.OccupancyRate%"></div>
                 </div>
            </div>
        </div>

        <!-- Pending Bookings Card -->
        <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Pending Orders</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-2">@Model.PendingBookings</h3>
                </div>
                <div class="p-2 bg-yellow-50 rounded-lg">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>
            </div>
             <div class="mt-4 flex items-center text-sm">
                <span class="text-yellow-600 font-medium">@Model.TodayCheckIns Check-ins today</span>
            </div>
        </div>

        <!-- Rooms Status Card -->
        <div class="bg-white rounded-xl border border-gray-200 p-6 shadow-sm">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Total Rooms</p>
                    <h3 class="text-2xl font-bold text-gray-900 mt-2">@Model.TotalRooms</h3>
                </div>
                <div class="p-2 bg-teal-50 rounded-lg">
                    <svg class="w-6 h-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                </div>
            </div>
            <div class="mt-4 flex items-center text-sm">
                <span class="text-gray-500">@Model.AvailableRooms Available / @Model.OccupiedRooms Occupied</span>
            </div>
        </div>
    </div>

    <!-- Quick Actions & recent -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Quick Actions -->
        <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Quick Actions</h2>
            <div class="space-y-4">
                 <a asp-action="Hotel" class="block p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md transition-shadow group">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-indigo-50 rounded-lg group-hover:bg-indigo-100 transition-colors">
                            <svg class="w-6 h-6 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Manage Hotel</h3>
                            <p class="text-sm text-gray-500">Update hotel details and photos</p>
                        </div>
                        <div class="ml-auto">
                            <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                        </div>
                    </div>
                </a>

                <a asp-action="Rooms" class="block p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md transition-shadow group">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-teal-50 rounded-lg group-hover:bg-teal-100 transition-colors">
                             <svg class="w-6 h-6 text-teal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Manage Rooms</h3>
                            <p class="text-sm text-gray-500">Add rooms and update availability</p>
                        </div>
                        <div class="ml-auto">
                            <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                        </div>
                    </div>
                </a>

                <a asp-action="Bookings" class="block p-4 bg-white border border-gray-200 rounded-xl hover:shadow-md transition-shadow group">
                    <div class="flex items-center gap-4">
                        <div class="p-3 bg-purple-50 rounded-lg group-hover:bg-purple-100 transition-colors">
                            <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        </div>
                        <div>
                            <h3 class="font-bold text-gray-900">Manage Bookings</h3>
                            <p class="text-sm text-gray-500">Review pending reservations</p>
                        </div>
                         <div class="ml-auto">
                            <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Recent Bookings -->
        <div>
            <h2 class="text-lg font-bold text-gray-900 mb-4">Recent Bookings</h2>
            <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
                @if (Model.RecentBookings.Any())
                {
                    @foreach (var booking in Model.RecentBookings)
                    {
                        <div class="p-4 border-b border-gray-100 flex items-center gap-3">
                            <div class="w-2 h-2 rounded-full @(booking.Status == "Pending" ? "bg-yellow-500" : booking.Status == "Confirmed" ? "bg-green-500" : "bg-gray-300")"></div>
                            <div>
                                <p class="text-sm"><span class="font-bold text-gray-900">@booking.RoomTypeName</span> <span class="text-gray-500">@booking.Status</span></p>
                                <p class="text-xs text-gray-400">@booking.CheckInDate.ToString("MMM dd") - @booking.CheckOutDate.ToString("MMM dd")</p>
                            </div>
                            <span class="ml-auto text-sm font-bold text-gray-900">@booking.TotalPrice.ToString("N0")₫</span>
                        </div>
                    }
                }
                else
                {
                    <div class="p-6 text-center text-gray-500 text-sm">No recent bookings found.</div>
                }
            </div>
        </div>
    </div>
</div>
