@model HotelBooking.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen -mt-24 pt-24 pb-12 flex flex-col justify-center py-12 sm:px-6 lg:px-8 bg-gray-50">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Create your account</h2>
        <p class="mt-2 text-center text-sm text-gray-600">
            Already have an account?
            <a asp-action="Login" class="font-medium text-primary hover:text-rose-500">Sign in</a>
        </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow-xl sm:rounded-lg sm:px-10 border border-gray-100">
            <form asp-action="Register" method="post" class="space-y-6">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="alert alert-error text-sm py-2"></div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                        <div class="mt-1">
                            <input asp-for="FirstName" type="text" required 
                                   class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                            <span asp-validation-for="FirstName" class="text-error text-xs mt-1"></span>
                        </div>
                    </div>
                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                        <div class="mt-1">
                            <input asp-for="LastName" type="text" required 
                                   class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                            <span asp-validation-for="LastName" class="text-error text-xs mt-1"></span>
                        </div>
                    </div>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email address</label>
                    <div class="mt-1">
                        <input asp-for="Email" type="email" autocomplete="email" required 
                               class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                        <span asp-validation-for="Email" class="text-error text-xs mt-1"></span>
                    </div>
                </div>
                
                <div>
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <div class="mt-1">
                        <input asp-for="PhoneNumber" type="tel" required 
                               class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                        <span asp-validation-for="PhoneNumber" class="text-error text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <div class="mt-1">
                        <input asp-for="Password" type="password" required 
                               class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                        <span asp-validation-for="Password" class="text-error text-xs mt-1"></span>
                    </div>
                </div>
                
                <div>
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <div class="mt-1">
                        <input asp-for="ConfirmPassword" type="password" required 
                               class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-primary focus:outline-none focus:ring-primary sm:text-sm" />
                        <span asp-validation-for="ConfirmPassword" class="text-error text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-primary py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors">
                        Create Account
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
