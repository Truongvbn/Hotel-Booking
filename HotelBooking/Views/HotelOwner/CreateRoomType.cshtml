@model HotelBooking.ViewModels.RoomTypeFormViewModel
@{
    ViewData["Title"] = "Create Room Type";
}

<div class="max-w-2xl mx-auto py-8 px-4">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6">
        <ol class="flex items-center gap-2 text-gray-500">
            <li><a asp-action="Dashboard" class="hover:text-primary">Dashboard</a></li>
            <li>/</li>
            <li><a asp-action="RoomTypes" class="hover:text-primary">Room Types</a></li>
            <li>/</li>
            <li class="text-gray-900 font-medium">Create New</li>
        </ol>
    </nav>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="bg-primary px-8 py-6 text-white">
            <h1 class="text-2xl font-bold">Create Room Type</h1>
            <p class="text-white/80 mt-1">Define a new category of rooms</p>
        </div>

        <form asp-action="CreateRoomType" method="post" class="p-8">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="HotelId" />
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error rounded-xl mb-6">
                    <span>@Html.ValidationSummary()</span>
                </div>
            }

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                    <input asp-for="Name" class="input input-bordered w-full bg-white text-gray-900" placeholder="e.g. Deluxe Suite" required />
                    <span asp-validation-for="Name" class="text-error text-xs"></span>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Description" rows="3" class="textarea textarea-bordered w-full bg-white text-gray-900" placeholder="Room features and amenities..."></textarea>
                    <span asp-validation-for="Description" class="text-error text-xs"></span>
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Capacity (Guests) *</label>
                        <input asp-for="Capacity" type="number" min="1" class="input input-bordered w-full bg-white text-gray-900" required />
                        <span asp-validation-for="Capacity" class="text-error text-xs"></span>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Base Price (Per Night) *</label>
                        <div class="relative">
                            <span class="absolute left-3 top-3 text-gray-500">$</span>
                            <input asp-for="BasePrice" type="number" min="0" step="0.01" class="input input-bordered w-full pl-8 bg-white text-gray-900" required />
                        </div>
                        <span asp-validation-for="BasePrice" class="text-error text-xs"></span>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Image URL</label>
                    <input asp-for="ImageUrl" type="url" class="input input-bordered w-full bg-white text-gray-900" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-error text-xs"></span>
                </div>

                <div class="flex gap-3 pt-4">
                    <button type="submit" class="btn btn-primary flex-1">Create Room Type</button>
                    <a asp-action="RoomTypes" class="btn btn-ghost">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
