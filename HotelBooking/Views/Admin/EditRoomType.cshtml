@model HotelBooking.ViewModels.RoomTypeFormViewModel
@{
    ViewData["Title"] = "Edit Room Type";
    var hotelName = (string)ViewBag.HotelName;
}

<div class="max-w-2xl mx-auto py-8 px-4">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6">
        <ol class="flex items-center gap-2 text-gray-500">
            <li><a asp-action="Dashboard" class="hover:text-primary">Dashboard</a></li>
            <li>/</li>
            <li><a asp-action="RoomTypes" asp-route-hotelId="@Model.HotelId" class="hover:text-primary">Room Types</a></li>
            <li>/</li>
            <li class="text-gray-900 font-medium">Edit @Model.Name</li>
        </ol>
    </nav>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-teal-500 to-cyan-600 px-8 py-8 text-white">
            <h1 class="text-2xl font-bold">Edit Room Type</h1>
            <p class="text-white/80 mt-1">Update @Model.Name in @hotelName</p>
        </div>

        <!-- Form -->
        <form asp-action="EditRoomType" method="post" class="p-8 space-y-6">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="RoomTypeId" />
            <input type="hidden" asp-for="HotelId" />

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-error rounded-xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>@Html.ValidationSummary()</span>
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Room Type Name *</label>
                    <input asp-for="Name" class="input input-bordered w-full bg-white text-gray-900 focus:border-primary focus:ring-2 focus:ring-primary/20" placeholder="e.g., Deluxe Suite, Standard Room" required />
                    <span asp-validation-for="Name" class="text-error text-sm mt-1"></span>
                </div>

                <!-- Capacity -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Max Guests *</label>
                    <input asp-for="Capacity" type="number" min="1" max="10" class="input input-bordered w-full bg-white text-gray-900 focus:border-primary" required />
                    <p class="text-gray-500 text-xs mt-1">Maximum number of guests</p>
                </div>

                <!-- Base Price -->
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Price per Night ($) *</label>
                    <input asp-for="BasePrice" type="number" step="0.01" min="0" class="input input-bordered w-full bg-white text-gray-900 focus:border-primary" required />
                </div>

                <!-- Description -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                    <textarea asp-for="Description" rows="3" class="textarea textarea-bordered w-full bg-white text-gray-900 focus:border-primary" placeholder="Describe the room type, amenities, and special features..."></textarea>
                </div>

                <!-- Image URL -->
                <div class="md:col-span-2">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">Image URL</label>
                    <input asp-for="ImageUrl" type="url" class="input input-bordered w-full bg-white text-gray-900 focus:border-primary" placeholder="https://example.com/room-image.jpg" />
                    <p class="text-gray-500 text-xs mt-1">Optional: URL to a representative image</p>
                    
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-3">
                            <img src="@Model.ImageUrl" alt="Current image" class="w-32 h-20 object-cover rounded-lg border border-gray-200" />
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="flex gap-3 pt-4 border-t border-gray-100">
                <button type="submit" class="btn btn-primary flex-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Save Changes
                </button>
                <a asp-action="RoomTypes" asp-route-hotelId="@Model.HotelId" class="btn btn-ghost">Cancel</a>
            </div>
        </form>
    </div>
</div>
