@model HotelBooking.ViewModels.AdminHotelListViewModel
@{
    ViewData["Title"] = "Hotels";
    var isAdmin = (bool?)ViewBag.IsAdmin ?? false;
}

<div class="max-w-7xl mx-auto py-8 px-4">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6">
        <ol class="flex items-center gap-2 text-gray-500">
            <li><a asp-action="Dashboard" class="hover:text-primary">Dashboard</a></li>
            <li>/</li>
            <li class="text-gray-900 font-medium">Hotels</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">
                @if (isAdmin)
                {
                    <span>All Properties</span>
                }
                else
                {
                    <span>My Hotel</span>
                }
            </h1>
            <p class="text-sm text-gray-500 mt-1">Manage your hotel inventory and status.</p>
        </div>
        @if (isAdmin)
        {
            <a asp-action="CreateHotel" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                Add Property
            </a>
        }
    </div>

    <!-- Hotels Grid/Cards -->
    @if (!Model.Hotels.Any())
    {
        <div class="text-center py-16 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-200">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="text-lg font-semibold text-gray-700 mb-2">No hotels found</h3>
            <p class="text-gray-500">You don't have any hotels assigned to your account.</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var hotel in Model.Hotels)
            {
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 group">
                    <!-- Image placeholder -->
                    <div class="aspect-[16/10] bg-gradient-to-br from-rose-100 to-pink-100 relative">
                        <div class="w-full h-full flex items-center justify-center text-6xl">üè®</div>
                        <!-- Status badge -->
                        @if (hotel.IsActive)
                        {
                            <div class="absolute top-3 left-3 bg-green-500 text-white px-3 py-1 rounded-full text-xs font-medium shadow-sm">
                                Active
                            </div>
                        }
                        else
                        {
                            <div class="absolute top-3 left-3 bg-red-500 text-white px-3 py-1 rounded-full text-xs font-medium shadow-sm">
                                Inactive
                            </div>
                        }
                        <!-- Rating -->
                        <div class="absolute top-3 right-3 bg-white/90 backdrop-blur-sm px-2 py-1 rounded-full text-sm font-medium shadow-sm flex items-center gap-1">
                            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                            @hotel.StarRating
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-5">
                        <h3 class="text-lg font-bold text-gray-900 mb-1">@hotel.Name</h3>
                        <p class="text-gray-500 text-sm mb-4 flex items-center gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            @(hotel.City ?? "Unknown"), Vietnam
                        </p>

                        <!-- Stats -->
                        <div class="flex gap-4 text-sm mb-4">
                            <div class="bg-gray-50 rounded-lg px-3 py-2 flex-1 text-center">
                                <div class="text-lg font-bold text-gray-900">@hotel.TotalRooms</div>
                                <div class="text-xs text-gray-500">Rooms</div>
                            </div>
                            <div class="bg-green-50 rounded-lg px-3 py-2 flex-1 text-center">
                                <div class="text-lg font-bold text-green-700">@hotel.AvailableRooms</div>
                                <div class="text-xs text-green-600">Available</div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="grid grid-cols-2 gap-2 mb-2">
                            <a asp-action="Rooms" asp-route-hotelId="@hotel.HotelId" class="btn btn-sm btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                </svg>
                                Rooms
                            </a>
                            <a asp-action="RoomTypes" asp-route-hotelId="@hotel.HotelId" class="btn btn-sm btn-ghost">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                                </svg>
                                Types
                            </a>
                        </div>
                        <div class="grid grid-cols-2 gap-2">
                            <a asp-action="Bookings" asp-route-hotelId="@hotel.HotelId" class="btn btn-sm btn-ghost">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                </svg>
                                Bookings
                            </a>
                            <a asp-action="EditHotel" asp-route-id="@hotel.HotelId" class="btn btn-sm btn-ghost">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Edit
                            </a>
                        </div>

                        @if (isAdmin)
                        {
                            <div class="mt-2 pt-2 border-t border-gray-100">
                                <form asp-action="DeleteHotel" asp-route-id="@hotel.HotelId" method="post" 
                                      onsubmit="return confirm('Are you sure you want to delete this hotel? This action cannot be undone.');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-ghost text-error w-full">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                        Delete Hotel
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
