@model DataAccess.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="max-w-2xl mx-auto py-12 px-4">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-rose-500 to-pink-600 px-8 py-10 text-white">
            <div class="flex items-center gap-6">
                <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center text-3xl font-bold backdrop-blur-sm">
                    @Model.FirstName?.Substring(0, 1).ToUpper()@Model.LastName?.Substring(0, 1).ToUpper()
                </div>
                <div>
                    <h1 class="text-2xl font-bold">@Model.FullName</h1>
                    <p class="text-white/80">@Model.Role</p>
                </div>
            </div>
        </div>

        <!-- Profile Details -->
        <div class="p-8 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Email</label>
                    <p class="text-gray-900 font-medium">@Model.Email</p>
                </div>

                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Phone</label>
                    <p class="text-gray-900 font-medium">@(Model.PhoneNumber ?? "Not provided")</p>
                </div>

                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">First Name</label>
                    <p class="text-gray-900 font-medium">@(Model.FirstName ?? "Not provided")</p>
                </div>

                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Last Name</label>
                    <p class="text-gray-900 font-medium">@(Model.LastName ?? "Not provided")</p>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Address</label>
                    <p class="text-gray-900 font-medium">@(Model.Address ?? "Not provided")</p>
                </div>

                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Member Since</label>
                    <p class="text-gray-900 font-medium">@Model.CreatedDate.ToString("MMMM dd, yyyy")</p>
                </div>

                <div>
                    <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">Account Status</label>
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-success gap-1">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                            Active
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-error">Inactive</span>
                    }
                </div>
            </div>

            <div class="border-t border-gray-100 pt-6 flex flex-wrap gap-3">
                <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    My Bookings
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-ghost">
                    Back to Home
                </a>
            </div>
        </div>
    </div>
</div>
