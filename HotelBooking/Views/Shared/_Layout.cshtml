<!DOCTYPE html>
<html lang="en" data-theme="ghost">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Booking</title>
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Fallback to CDN if local CSS not built -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.0/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        primary: '#FF385C',
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen flex flex-col font-sans text-gray-800 antialiased bg-white">
    <!-- Navbar -->
    <div class="border-b border-gray-100 bg-white sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <!-- Logo -->
                <div class="flex-shrink-0 flex items-center">
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-2 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                             <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span class="font-bold text-xl tracking-tight hidden md:block">GhostAurora</span>
                    </a>
                </div>

                <!-- Center Search (Visible on non-home pages potentially, otherwise just spacer) -->
                 <div class="hidden md:flex flex-1 justify-center px-8">
                    @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
                    {
                        <div class="border border-gray-200 rounded-full shadow-sm hover:shadow-md transition-shadow cursor-pointer py-2.5 px-6 flex items-center gap-4 text-sm font-medium w-full max-w-md">
                             <div class="truncate">Anywhere</div>
                             <div class="h-4 w-px bg-gray-300"></div>
                             <div class="truncate">Any week</div>
                             <div class="h-4 w-px bg-gray-300"></div>
                             <div class="truncate text-gray-500 font-normal">Add guests</div>
                             <div class="ml-auto bg-primary rounded-full p-2 text-white">
                                 <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
                             </div>
                        </div>
                    }
                </div>

                <!-- Right Menu -->
                <div class="flex items-center gap-4">
                    <a asp-controller="Hotel" asp-action="Search" class="hidden md:block text-sm font-medium hover:bg-gray-50 px-4 py-2 rounded-full transition-colors">
                        Find Stays
                    </a>
                    
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                         <div class="dropdown dropdown-end">
                            <div tabindex="0" role="button" class="btn btn-ghost btn-circle border border-gray-200 hover:shadow-md transition-all flex items-center justify-center gap-2 w-auto px-2 pl-3 h-12">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
                                <div class="avatar placeholder">
                                    <div class="bg-gray-500 text-white rounded-full w-8 h-8">
                                        <span class="text-xs">@User.Identity.Name?.Substring(0,1).ToUpper()</span>
                                    </div>
                                </div>
                            </div>
                            <ul tabindex="0" class="menu menu-sm dropdown-content mt-2 z-[1] p-2 shadow-xl bg-white rounded-xl w-64 border border-gray-100">
                                <li class="px-4 py-2 font-bold border-b border-gray-100 mb-2">@User.Identity.Name</li>
                                @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                                {
                                     <li><a asp-controller="Admin" asp-action="Dashboard" class="text-primary font-medium">Admin Dashboard</a></li>
                                     <li class="my-1 border-t border-gray-100"></li>
                                }
                                <li><a asp-controller="Booking" asp-action="MyBookings" class="py-3">My Trips</a></li>
                                <li><a asp-controller="User" asp-action="Profile" class="py-3">Account</a></li>
                                <li class="my-1 border-t border-gray-100"></li>
                                <li>
                                    <form asp-controller="User" asp-action="Logout" method="post" class="w-full">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="w-full text-left py-2 text-rose-500">Log out</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center gap-2">
                             <a asp-controller="User" asp-action="Login" class="text-sm font-medium hover:bg-gray-50 px-4 py-2 rounded-full transition-colors">Log in</a>
                             <a asp-controller="User" asp-action="Register" class="text-sm font-medium bg-primary text-white hover:bg-rose-600 px-4 py-2 rounded-full transition-colors shadow-sm">Sign up</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts -->
    <div class="max-w-7xl mx-auto px-4 mt-4 w-full">
        @if (TempData["Success"] != null)
        {
            <div role="alert" class="alert alert-success rounded-xl shadow-sm border border-green-200 bg-green-50 text-green-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>@TempData["Success"]</span>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div role="alert" class="alert alert-error rounded-xl shadow-sm border border-red-200 bg-red-50 text-red-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span>@TempData["Error"]</span>
            </div>
        }
    </div>

    <!-- Main Content -->
    <main class="flex-grow">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="font-bold text-gray-900 mb-4">Support</h3>
                    <ul class="space-y-3 text-sm text-gray-600">
                        <li><a href="#" class="hover:underline">Help Center</a></li>
                        <li><a href="#" class="hover:underline">AirCover</a></li>
                        <li><a href="#" class="hover:underline">Anti-discrimination</a></li>
                        <li><a href="#" class="hover:underline">Disability support</a></li>
                    </ul>
                </div>
                <div>
                     <h3 class="font-bold text-gray-900 mb-4">Hosting</h3>
                    <ul class="space-y-3 text-sm text-gray-600">
                        <li><a href="#" class="hover:underline">Ghost your home</a></li>
                        <li><a href="#" class="hover:underline">AirCover for Hosts</a></li>
                        <li><a href="#" class="hover:underline">Hosting resources</a></li>
                        <li><a href="#" class="hover:underline">Community forum</a></li>
                    </ul>
                </div>
                 <div>
                     <h3 class="font-bold text-gray-900 mb-4">GhostAurora</h3>
                    <ul class="space-y-3 text-sm text-gray-600">
                        <li><a href="#" class="hover:underline">Newsroom</a></li>
                        <li><a href="#" class="hover:underline">New features</a></li>
                        <li><a href="#" class="hover:underline">Careers</a></li>
                        <li><a href="#" class="hover:underline">Investors</a></li>
                    </ul>
                </div>
                <div>
                    <div class="flex items-center gap-2 mb-4 text-primary font-bold text-xl">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        GhostAurora
                    </div>
                    <p class="text-sm text-gray-500">© 2026 GhostAurora, Inc.</p>
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
