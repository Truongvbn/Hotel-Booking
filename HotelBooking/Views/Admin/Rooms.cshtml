@model HotelBooking.ViewModels.AdminRoomListViewModel
@{
    ViewData["Title"] = $"Rooms - {Model.HotelName}";
    var roomTypes = ViewBag.RoomTypes as IEnumerable<DataAccess.Models.RoomType>;
}

<div class="max-w-7xl mx-auto py-8 px-4">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6">
        <ol class="flex items-center gap-2 text-gray-500">
            <li><a asp-action="Dashboard" class="hover:text-primary">Dashboard</a></li>
            <li>/</li>
            <li><a asp-action="Hotels" class="hover:text-primary">Hotels</a></li>
            <li>/</li>
            <li class="text-gray-900 font-medium">@Model.HotelName - Rooms</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <div>
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Room Inventory</h1>
            <p class="text-gray-500 mt-1">Manage rooms for @Model.HotelName</p>
        </div>
        <div class="flex gap-2">
            <a asp-action="RoomTypes" asp-route-hotelId="@Model.HotelId" class="btn btn-ghost">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                Room Types
            </a>
            <button onclick="document.getElementById('addRoomModal').showModal()" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
                Add Rooms
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="bg-white rounded-xl p-4 border border-gray-100 shadow-sm">
            <div class="text-2xl font-bold text-gray-900">@Model.Rooms.Count()</div>
            <div class="text-sm text-gray-500">Total Rooms</div>
        </div>
        <div class="bg-green-50 rounded-xl p-4 border border-green-100">
            <div class="text-2xl font-bold text-green-700">@Model.Rooms.Count(r => r.Status == "Available")</div>
            <div class="text-sm text-green-600">Available</div>
        </div>
        <div class="bg-blue-50 rounded-xl p-4 border border-blue-100">
            <div class="text-2xl font-bold text-blue-700">@Model.Rooms.Count(r => r.Status == "Occupied")</div>
            <div class="text-sm text-blue-600">Occupied</div>
        </div>
        <div class="bg-amber-50 rounded-xl p-4 border border-amber-100">
            <div class="text-2xl font-bold text-amber-700">@Model.Rooms.Count(r => r.Status == "Maintenance")</div>
            <div class="text-sm text-amber-600">Maintenance</div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white p-4 rounded-t-xl border border-gray-200 border-b-0">
        <form method="get" class="flex flex-col md:flex-row gap-4 items-end">
            <input type="hidden" name="hotelId" value="@Model.HotelId" />
            <div class="w-full md:w-auto">
                <label class="block text-xs font-medium text-gray-500 mb-1">Filter by Status</label>
                <select name="status" class="select select-bordered w-full md:w-48 bg-white text-gray-900" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="Available" selected="@(Model.StatusFilter == "Available")">Available</option>
                    <option value="Occupied" selected="@(Model.StatusFilter == "Occupied")">Occupied</option>
                    <option value="Maintenance" selected="@(Model.StatusFilter == "Maintenance")">Maintenance</option>
                </select>
            </div>
            @if (!string.IsNullOrEmpty(Model.StatusFilter))
            {
                <a asp-action="Rooms" asp-route-hotelId="@Model.HotelId" class="btn btn-ghost btn-sm">Clear Filter</a>
            }
        </form>
    </div>

    <!-- Table -->
    <div class="bg-white border border-gray-200 rounded-b-xl shadow-sm overflow-hidden">
        @if (!Model.Rooms.Any())
        {
            <div class="text-center py-16">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                <h3 class="text-lg font-semibold text-gray-700 mb-2">No rooms found</h3>
                <p class="text-gray-500 mb-4">Create room types first, then add rooms</p>
                <a asp-action="RoomTypes" asp-route-hotelId="@Model.HotelId" class="btn btn-primary">
                    Manage Room Types
                </a>
            </div>
        }
        else
        {
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Location</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var room in Model.Rooms)
                        {
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="text-sm font-bold text-gray-900 bg-gray-100 px-3 py-1.5 rounded-lg">@room.RoomNumber</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900 font-medium">@room.RoomTypeName</div>
                                    <div class="text-xs text-gray-500">Up to @room.Capacity guests</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    <div class="flex items-center gap-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                                        </svg>
                                        Floor @room.Floor
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm font-semibold text-gray-900">$@room.BasePrice.ToString("N0")</div>
                                    <div class="text-xs text-gray-500">per night</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="badge @room.StatusBadgeClass">@room.Status</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="dropdown dropdown-end">
                                        <label tabindex="0" class="btn btn-ghost btn-sm btn-circle">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                                            </svg>
                                        </label>
                                        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-white rounded-xl w-48 border border-gray-100">
                                            <li class="menu-title text-xs">Set Status</li>
                                            @foreach (var status in new[] { "Available", "Occupied", "Maintenance" })
                                            {
                                                @if (status != room.Status)
                                                {
                                                    <li>
                                                        <form asp-action="UpdateRoomStatus" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="roomId" value="@room.RoomId" />
                                                            <input type="hidden" name="status" value="@status" />
                                                            <input type="hidden" name="hotelId" value="@Model.HotelId" />
                                                            <button type="submit" class="w-full text-left">
                                                                @if (status == "Available") { <span class="text-green-600">‚úì</span> }
                                                                else if (status == "Occupied") { <span class="text-blue-600">‚óè</span> }
                                                                else { <span class="text-amber-600">‚ö†</span> }
                                                                Mark @status
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                            }
                                            <div class="divider my-1"></div>
                                            <li>
                                                <form asp-action="DeleteRoom" method="post" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="roomId" value="@room.RoomId" />
                                                    <input type="hidden" name="hotelId" value="@Model.HotelId" />
                                                    <button type="submit" class="text-error w-full text-left">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                        </svg>
                                                        Delete
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Add Room Modal -->
<dialog id="addRoomModal" class="modal">
    <div class="modal-box bg-white max-w-md">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">‚úï</button>
        </form>
        <h3 class="font-bold text-lg mb-4">Add New Rooms</h3>
        
        @if (roomTypes != null && roomTypes.Any())
        {
            <form asp-action="CreateRooms" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="HotelId" value="@Model.HotelId" />
                
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Room Type *</label>
                        <select name="RoomTypeId" class="select select-bordered w-full bg-white text-gray-900" required>
                            <option value="">Select room type...</option>
                            @foreach (var rt in roomTypes)
                            {
                                <option value="@rt.RoomTypeId">@rt.Name ($@rt.BasePrice.ToString("N0")/night)</option>
                            }
                        </select>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Starting Number *</label>
                            <input type="number" name="StartingNumber" value="101" min="1" class="input input-bordered w-full bg-white text-gray-900" required />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Quantity *</label>
                            <input type="number" name="Quantity" value="1" min="1" max="50" class="input input-bordered w-full bg-white text-gray-900" required />
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Floor *</label>
                        <input type="number" name="Floor" value="1" min="1" max="100" class="input input-bordered w-full bg-white text-gray-900" required />
                    </div>
                    
                    <p class="text-sm text-gray-500">
                        üí° Rooms will be numbered sequentially. E.g., starting from 101 with quantity 3 creates rooms 101, 102, 103.
                    </p>
                </div>
                
                <div class="modal-action">
                    <button type="submit" class="btn btn-primary">Create Rooms</button>
                    <button type="button" onclick="document.getElementById('addRoomModal').close()" class="btn btn-ghost">Cancel</button>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-6">
                <p class="text-gray-500 mb-4">You need to create room types first before adding rooms.</p>
                <a asp-action="CreateRoomType" asp-route-hotelId="@Model.HotelId" class="btn btn-primary">Create Room Type</a>
            </div>
        }
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
