@model HotelBooking.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="max-w-xl mx-auto py-12 px-4">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-r from-rose-500 to-pink-600 px-8 py-8 text-white">
            <div class="flex items-center gap-4">
                <a asp-action="Profile" class="btn btn-ghost btn-circle text-white hover:bg-white/20">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </a>
                <div>
                    <h1 class="text-2xl font-bold">Change Password</h1>
                    <p class="text-white/80">Update your account password</p>
                </div>
            </div>
        </div>

        <!-- Form -->
        <div class="p-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>@TempData["Success"]</span>
                </div>
            }

            <!-- Password Requirements Info -->
            <div class="alert alert-info mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>Password must be at least 6 characters long.</span>
            </div>

            <form asp-action="ChangePassword" method="post" class="space-y-6">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>

                <div>
                    <label asp-for="CurrentPassword" class="label">
                        <span class="label-text font-semibold text-gray-700">Current Password *</span>
                    </label>
                    <input asp-for="CurrentPassword" type="password" class="input input-bordered w-full focus:input-primary" placeholder="Enter your current password" />
                    <span asp-validation-for="CurrentPassword" class="text-error text-sm"></span>
                </div>

                <div class="border-t border-gray-100 pt-6">
                    <div>
                        <label asp-for="NewPassword" class="label">
                            <span class="label-text font-semibold text-gray-700">New Password *</span>
                        </label>
                        <input asp-for="NewPassword" type="password" class="input input-bordered w-full focus:input-primary" placeholder="Enter your new password" />
                        <span asp-validation-for="NewPassword" class="text-error text-sm"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ConfirmPassword" class="label">
                        <span class="label-text font-semibold text-gray-700">Confirm New Password *</span>
                    </label>
                    <input asp-for="ConfirmPassword" type="password" class="input input-bordered w-full focus:input-primary" placeholder="Confirm your new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-error text-sm"></span>
                </div>

                <!-- Submit Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-gray-100">
                    <button type="submit" class="btn btn-primary flex-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        Change Password
                    </button>
                    <a asp-action="Profile" class="btn btn-ghost flex-1">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
