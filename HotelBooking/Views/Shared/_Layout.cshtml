<!DOCTYPE html>
<html lang="en" data-theme="ghost">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Booking</title>
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Fallback to CDN if local CSS not built -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.0/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen bg-base-200 font-sans text-neutral antialiased">
    <!-- Navbar -->
    <div class="navbar bg-base-100 shadow-lg sticky top-0 z-50">
        <div class="navbar-start">
            <div class="dropdown">
                <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
                    </svg>
                </div>
                <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Hotel" asp-action="Search">Search Hotels</a></li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li><a asp-controller="Booking" asp-action="MyBookings">My Bookings</a></li>
                    }
                </ul>
            </div>
            <a asp-controller="Home" asp-action="Index" class="btn btn-ghost text-xl">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                HotelBooking
            </a>
        </div>
        <div class="navbar-center hidden lg:flex">
            <ul class="menu menu-horizontal px-1">
                <li><a asp-controller="Home" asp-action="Index" class="font-medium">Home</a></li>
                <li><a asp-controller="Hotel" asp-action="Search" class="font-medium">Search Hotels</a></li>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <li><a asp-controller="Booking" asp-action="MyBookings" class="font-medium">My Bookings</a></li>
                }
            </ul>
        </div>
        <div class="navbar-end gap-2">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="dropdown dropdown-end">
                    <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
                        <div class="bg-primary text-primary-content rounded-full w-10">
                            <span class="text-lg">@User.Identity.Name?.FirstOrDefault()</span>
                        </div>
                    </div>
                    <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
                        <li class="menu-title">
                            <span>@User.Identity.Name</span>
                        </li>
                        <li><a asp-controller="User" asp-action="Profile">Profile</a></li>
                        <li><a asp-controller="Booking" asp-action="MyBookings">My Bookings</a></li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Staff"))
                        {
                            <li><a asp-controller="Admin" asp-action="Dashboard" class="text-secondary">Admin Dashboard</a></li>
                        }
                        <li>
                            <form asp-controller="User" asp-action="Logout" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-error">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <a asp-controller="User" asp-action="Login" class="btn btn-ghost">Login</a>
                <a asp-controller="User" asp-action="Register" class="btn btn-primary">Register</a>
            }
        </div>
    </div>

    <!-- Alerts -->
    <div class="container mx-auto px-4 mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success animate-fade-in">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>@TempData["Success"]</span>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error animate-fade-in">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>@TempData["Error"]</span>
            </div>
        }
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-300 text-base-content mt-auto">
        <aside>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <p class="font-bold">Hotel Booking System</p>
            <p>Copyright © @DateTime.Now.Year - All rights reserved</p>
        </aside>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
