@model HotelBooking.ViewModels.HotelSearchResultViewModel
@{
    ViewData["Title"] = "Find your next stay";
}

<!-- Hero Section -->
<div class="relative -mt-6">
    <!-- Background Image / Gradient -->
    <div class="absolute inset-0 h-[600px] bg-gradient-to-br from-rose-500 to-pink-600 rounded-b-[3rem] shadow-xl overflow-hidden -z-10">
        <div class="absolute inset-0 bg-black/20"></div>
        <!-- Decorative Circle -->
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 -left-24 w-72 h-72 bg-yellow-300/20 rounded-full blur-3xl"></div>
    </div>

    <div class="container mx-auto px-4 pt-20 pb-32 text-center text-white">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight drop-shadow-md">
            Find your next stay
        </h1>
        <p class="text-xl md:text-2xl font-light opacity-90 mb-12 max-w-2xl mx-auto text-balance">
            Search deals on hotels, homes, and much more...
        </p>

        <!-- Floating Search Bar -->
        <div class="bg-white p-4 rounded-full shadow-2xl max-w-5xl mx-auto transform hover:scale-[1.01] transition-transform duration-300">
            <form asp-controller="Hotel" asp-action="Search" method="get" class="flex flex-col md:flex-row items-center divide-y md:divide-y-0 md:divide-x divide-gray-100">
                
                <!-- Destination -->
                <div class="flex-1 w-full md:w-auto px-6 py-2">
                    <label class="block text-xs font-bold text-gray-800 uppercase tracking-wider mb-1">Where</label>
                    <select name="City" class="select select-ghost select-sm w-full -ml-3 text-gray-600 font-medium focus:bg-transparent">
                        <option value="">Search destinations</option>
                        @foreach (var city in Model.AvailableCities)
                        {
                            <option value="@city" selected="@(Model.SearchCriteria.City == city)">@city</option>
                        }
                    </select>
                </div>

                <!-- Check-in -->
                <div class="flex-1 w-full md:w-auto px-6 py-2">
                    <label class="block text-xs font-bold text-gray-800 uppercase tracking-wider mb-1">Check in</label>
                    <input type="date" name="CheckInDate" 
                           value="@Model.SearchCriteria.CheckInDate.ToString("yyyy-MM-dd")"
                           min="@DateTime.Today.ToString("yyyy-MM-dd")"
                           class="input input-ghost input-sm w-full -ml-3 text-gray-600 font-medium focus:bg-transparent" />
                </div>

                <!-- Check-out -->
                <div class="flex-1 w-full md:w-auto px-6 py-2">
                    <label class="block text-xs font-bold text-gray-800 uppercase tracking-wider mb-1">Check out</label>
                    <input type="date" name="CheckOutDate" 
                           value="@Model.SearchCriteria.CheckOutDate.ToString("yyyy-MM-dd")"
                           min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                           class="input input-ghost input-sm w-full -ml-3 text-gray-600 font-medium focus:bg-transparent" />
                </div>

                <!-- Guests -->
                <div class="flex-1 w-full md:w-auto px-6 py-2 relative">
                    <label class="block text-xs font-bold text-gray-800 uppercase tracking-wider mb-1">Who</label>
                    <select name="Guests" class="select select-ghost select-sm w-full -ml-3 text-gray-600 font-medium focus:bg-transparent">
                        @for (int i = 1; i <= 6; i++)
                        {
                            <option value="@i" selected="@(Model.SearchCriteria.Guests == i)">@i @(i == 1 ? "Guest" : "Guests")</option>
                        }
                    </select>
                </div>

                <!-- Search Button -->
                <div class="pl-4 pr-1">
                    <button type="submit" class="btn btn-primary rounded-full px-8 py-3 h-auto min-h-0 text-lg font-bold shadow-lg hover:shadow-xl hover:scale-105 transition-all text-white border-none bg-gradient-to-r from-primary to-rose-600">
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Inspiration Section -->
